<%- include("../partials/header") %>
<br><br><br><br><br>
<section style=" width: 100%; height: 100vh; background: linear-gradient(to bottom, rgba(0,0,0,0.8), rgba(0,0,0,0.8)),url(https://cdn.marketingoops.com/wp-content/uploads/2014/12/education-booksOK.jpg);background-size: cover;">
    <br><br><br><br>
    <div class="socialshow">
    <form>
      
    <h1 style="font-size: 50px;font-weight: bolder;"><center><%= learn.name %></center></h1>
    
    <center><img id="myImg"  src=<%= "../uploads/"+ learn.image %>   width="autu" height="auto"></center>
      <div id="myModal" class="modal">
      <span class="closes">&times;</span>
      <img class="modal-content" id="img01">
      </div>

    <h3 style="font-size: 20px;"><center><%= learn.desc %></center></h3>  
    <p style="font-size: 18px;"><%= learn.subject %></p>
    <p>
      <em>สร้างโดย:
        <%= learn.author.username %>, <%= moment(learn.createdAt).fromNow() %></em>
    </p>
   
    </form>
</div>


<br>


</section>
<script>
    var modal = document.getElementById('myModal');
    var img = document.getElementById('myImg');
    var modalImg = document.getElementById("img01");

    img.onclick = function(){
      modal.style.display = "block";
      modalImg.src = this.src;
    }
    var span = document.getElementsByClassName("closes")[0];
    span.onclick = function() { 
      modal.style.display = "none";
    }
    </script>

